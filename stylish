#!/usr/bin/env php
<?php

/********************************
		InstanceManager
********************************/
class InstanceManager
{

}

/********************************
		Process
********************************/
class Process
{
	public function run()
	{

	}

	public function kill()
	{
		
	}
}

/********************************
		Command
********************************/
abstract class Command
{
	public static function pattern()
	{
		return '/help/';
	}
	
	public static function detect($arg)
	{
		return (preg_match(self::pattern(), $arg)) ? new self : false;
	}
}

class WatchCommand extends Command
{
	public static function pattern() {
		return '/watch/';
	}
}

array_shift($argv);

$watch = WatchCommand::detect($argv[0]);

if ($watch === false) echo "\nNothing to watch...\n";

?>
